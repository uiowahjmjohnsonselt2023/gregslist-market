<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, class: "img-fluid"%>
      <% else %>
        <img src="https://cdn.discordapp.com/attachments/1180250200695124121/1180328761586110504/65535_52706077934_9a3860e070_z_360_360_nofilter.png?ex=657d05d2&is=656a90d2&hm=ce72654fec5b27963229dd9d3ae63afd7c37af5484e2cf3ea4c3365c605056c6&" alt="" class="img-fluid">
      <% end %> 
      <h1>
        <%= @user.name %>
      </h1>
      <%#= image_tag @user.avatar.url %>
    </section>

    <section class="action_sidebar">
      <%= link_to "Access Seller accounts", select_seller_path, class: "btn btn btn-primary" %>
      <%= link_to "Edit payment information", edit_buyer_path(@user.id), method: "edit", class: "btn btn btn-primary" %>
    </section>


    <b>Edit your profile:</b>
    <ul>
      <li><%= link_to "Settings", edit_user_path(current_user) %></li>

      <% if current_user && (current_user == @user || current_user.admin?) %>
        <li>
          <%= form_for @user, url: delete_user_path, method: :put, data: { confirm: 'Are you sure?' } do |f| %>
            <%= f.hidden_field :id  %>
            <%= f.submit "Delete Account" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </aside>
