<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%#= image_tag @user.avatar.url %>
    </section>

    <section class="action_sidebar">
  <%= link_to "Access Seller accounts", select_seller_path, class: "btn btn btn-primary" %>
    </section>

    <b>Edit your profile:</b>
    <ul>
      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
    </ul>
  </aside>
</div>
