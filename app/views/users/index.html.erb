<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for(user) %>
      Name: <%= link_to user.name, user %> | Username: <%= link_to user.username, user %>
      <% if current_user == @user || current_user.admin?%>
        | <%= button_to "Destroy", user, method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>