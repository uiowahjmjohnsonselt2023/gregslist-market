<% provide(:title, "Edit item") %>
<h1>Update item information</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@item) do |f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_field :description %>
      </div>

      <div class="field">
        <%= f.label :listing_date %><br>
        <%= f.date_field :listing_date %>
      </div>

      <div class="field">
        <%= f.label :listed_price %><br>
        <%= f.number_field :listed_price, step: 0.01 %>
      </div>

      <div class="field">
        <%= f.label :category %><br>
        <%= f.collection_select :category_ids, Category.all, :id, :name, {}, { multiple: true } %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>

  </div>
</div>
